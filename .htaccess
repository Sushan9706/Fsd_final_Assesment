# Enable rewrite engine
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Set the base directory - ADJUST THIS IF NEEDED OR COMMENT OUT
    RewriteBase /~NP03CS4A240103/fsd_final/

    # Prevent directory listing - Commented out for shared hosting compatibility
    # Options -Indexes

    # Enable following symbolic links - Commented out for shared hosting compatibility
    # Options +FollowSymLinks
</IfModule>

# Set default charset - Commented out just in case
# AddDefaultCharset UTF-8

# Protect sensitive files
<FilesMatch "^(database\.sql|\.git.*|\.env)$">
    Require all denied
</FilesMatch>

# Protect config directory
<Files "db.php">
    Require all denied
</Files>

# Compression - wrapped in module check (should be safe, but can disable if needed)
<IfModule mod_deflate.c>
    # AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

